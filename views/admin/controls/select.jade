
div.form-group
   label(for=field.id, class="col-sm-2 control-label")= field.label
   .col-sm-10
      select(name=field.name, id=field.id, class!=field.class, required=field.required)
         option() ---
         for value in _.result(field, 'options')
            option(value=value.val, selected=(value.val == field.value))= (value.title || value.val)

