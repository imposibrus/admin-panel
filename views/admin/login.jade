extends layout

block content
  form(role='form', action="/admin/login", method="POST").login_form
    if session.messages
      while message = session.messages.shift()
        div(role="alert", class="alert alert-#{message.type}")= message.message

    h2.login_form-heading Please sign in
    label(for='inputEmail').sr-only Login
    input(type='text', name="login", placeholder='Login', required=true, autofocus=true)#inputEmail.form-control
    label(for='inputPassword').sr-only Password
    input(type='password', name="pass", placeholder='Password', required=true)#inputPassword.form-control
    br
    button(type='submit').btn.btn-lg.btn-primary.btn-block Submit


