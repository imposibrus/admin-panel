
@require functions

.login_form {
  max-width: 330px;
  padding: 15px;
  margin: 0 auto;
  &-heading {
    margin-bottom: 10px;
  }
  .form-control {
    box()
    position: relative;
    height: auto;
    padding: 10px;
    font-size: 16px;
    &:focus {
      z-index: 2;
    }
  }
  input[type="text"] {
    margin-bottom: -1px;
    border-bottom-right-radius: 0;
    border-bottom-left-radius: 0;
  }
  input[type="password"] {
    margin-bottom: 10px;
    border-top-left-radius: 0;
    border-top-right-radius: 0;
  }
}


.dragging {
  .form-group {
    opacity .2
    position: relative;
  }
  .drop_zone {
    background: #eeefee;
    border: 2px dashed gray;
    box-shadow: 0 0 5px gray;
    border-radius: 4px;
    opacity: 1
    &.hover {
      background: #ded;
      border: 2px solid #333;
    }
  }
}

.upload_btn {
  position: relative;
  overflow: hidden;
  input[type="file"] {
    position: absolute;
    top: 0;
    right: 0;

    height:100%;
    margin: 0;

    opacity: 0;
    -ms-filter: 'alpha(opacity=0)';
    font-size: 200px;
    direction: ltr;
    cursor: pointer;
  }
}

.items_list {
  td {
    img {
      max-width: 300px
      max-height: 300px
    }
  }
}

.popover_image {
  text-align: center
  img {
    max-width: 200px
  }
}

.previews_list {
  user-select none
  .item {
    position: relative
    display: inline-block
    vertical-align: top
    width: 180px
    //height: 180px
    .del_image, .del_preview {
      position: absolute
      top: 0
      right: 0
      background-color: red
      border-radius 50%
      width: 20px
      height: 20px
      color: #fff
      text-align: center
      cursor: pointer
      font-size: 14px;
    }

    .progress {
      margin-bottom: 0
    }
  }
  img {
    width: 180px
    max-width: 100%
    max-height: 100%
    height: 180px;
    object-fit: cover;
  }
  .readerPreviewWrp {
    display: inline-block
    position: relative
    &:after {
      content: ''
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      background: rgba(0,0,0,.5) url(/admin/public/images/preloader_gray.gif) no-repeat center center
    }
    &.uploaded {
      &:after {
        display: none
      }
    }
  }
}

.files_list_wrp {
  .files_list {
    user-select none
    white-space: normal;
    .item {
      display: inline-block
      vertical-align: top
      width: 120px
      height: 120px
      text-align: center
      cursor: pointer
      position: relative
      overflow: hidden
      margin: 5px
      &:hover {
        box-shadow 0 0 0 3px #659dff
      }
      .icon {
        width: 100px
        height: 100px
        display: inline-block
        text-align: center
        line-height: 100px
        &.dir {
          background-color: #ff2
        }
        &.file {
          /*background-color: #4047ff*/
        }
        .image_preview {
          vertical-align: middle;
          max-height: 77px;
          max-width: 100px;
          margin-top: -5px;
        }
      }
      .title {
        text-align: center
      }
    }
  }
}

.upload_wrp {
  .upload_image {
    position: relative
    display: inline-block;
    padding: 6px 12px;
    margin-bottom: 0;
    font-size: 14px;
    font-weight: 400;
    line-height: 1.42857143;
    text-align: center;
    white-space: nowrap;
    vertical-align: middle;
    touch-action: manipulation;
    cursor: pointer;
    border: 1px solid rgba(0, 0, 0, 0);
    border-radius: 4px;
    color: #FFF;
    background-color: #5CB85C;
    background-image: linear-gradient(to bottom,#5CB85C 0,#419641 100%);
    background-repeat: repeat-x;
    border-color: #3E8F3E;
    &:hover {
      color: #FFF;
      border-color: #398439;
      background-color: #419641;
      background-position: 0 -15px;
    }
    span {
      color: inherit
    }
    .file_input {
      opacity: 0
      position: absolute
      cursor: pointer
      right: 0
      top: 0
      height: 100%
    }
  }
  .glyphicon {
    position: relative;
    font-family: 'Glyphicons Halflings';
    font-weight: 400;
    line-height: 1;
  }
}

.cropp-images {
  margin-top: 10px;
  display: flex;
  flex-direction: row;
  &-item {
    width: 300px
    margin-right: 20px;
  }
}
